<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme._2mbortrabalhofinal" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme._2mbortrabalhofinal" parent="Base.Theme._2mbortrabalhofinal" />
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/margin_default</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    <style name="TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>
    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding_default</item>
    </style>
    <style name="ButtonFullWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height_large</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textSize">@dimen/font_size_button_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonDefaultTransparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background_transparent</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_link</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>
    <style name="CardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:textSize">@dimen/font_size_card_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CardText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>
    <style name="DateTimeText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="NoEventsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textSize">@dimen/font_size_card_title</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>